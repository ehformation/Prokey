{% extends "layout/main.twig" %}

{% block content %}
<section class="p-8">
  <h2 class="text-3xl font-bold mb-6 text-gray-800">Liste des types de mot de passe</h2>

  <a href="{{ url('/password-types/create') }}" 
     class="inline-block bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-700 transition">
    + Créer un type de mot de passe
  </a>

  <table class="w-full mt-6 border-collapse bg-white rounded-lg shadow">
    <thead>
      <tr class="bg-gray-100 text-left">
        <th class="py-3 px-4">ID</th>
        <th class="py-3 px-4">Nom du type</th>
        <th class="py-3 px-4">Couleur</th>
        <th class="py-3 px-4">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for password_type in password_types %}
        <tr class="border-t hover:bg-gray-50">
          <td class="py-2 px-4">{{ password_type.id }}</td>
          <td class="py-2 px-4 font-semibold">{{ password_type.label }}</td>
          <td class="py-2 px-4">
            <span class="inline-block px-3 py-1 rounded-lg text-white"
                  style="background-color: {{ password_type.color }};">
              {{ password_type.color }}
            </span>
          </td>
          <td class="py-2 px-4 space-x-3">
            <a href="{{ url('/password-types/' ~ password_type.id ~ '/fields') }}" 
               class="text-blue-600 hover:underline font-medium">
              Voir les champs
            </a>
            <a href="{{ url('/password-types/' ~ password_type.id ~ '/edit') }}" 
               class="text-yellow-600 hover:underline font-medium">
              Modifier
            </a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="4" class="text-center text-gray-400 py-6">
            Aucun type de mot de passe n’a encore été créé.
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</section>
{% endblock %}
